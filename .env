# Base de datos MongoDB
MONGODB_URI=mongodb://admin:admin123@localhost:27017/music_app
MONGODB_ADMIN_URI=mongodb://admin:admin123@mongodb:27017/music_app?authSource=admin
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=music_app
MONGO_USER=music_user
MONGO_PASSWORD=secure_password

# Redis para Cache y Sesiones
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Configuración de sesiones
SESSION_SECRET=your_super_secret_session_key_change_in_production
SESSION_TTL=86400
SESSION_REMEMBER_ME_TTL=2592000

# Configuración de cache (TTL en segundos)
CACHE_USER_PROFILE_TTL=1800
CACHE_SEARCH_RESULTS_TTL=600
CACHE_PLAYLIST_DATA_TTL=3600
CACHE_TRENDING_TTL=7200
CACHE_ARTIST_INFO_TTL=86400

# Rate Limiting
RATE_LIMIT_LOGIN_MAX=5
RATE_LIMIT_LOGIN_WINDOW=900
RATE_LIMIT_API_MAX=1000
RATE_LIMIT_API_WINDOW=3600

# Aplicación
NODE_ENV=development
PORT=3000
API_BASE_URL=http://localhost:3000